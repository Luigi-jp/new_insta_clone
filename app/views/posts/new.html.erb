<% provide(:title, "アップロード") %>
<h1>写真をアップロード</h1>

<%= form_for(@post) do |f| %>
  
  <%= f.file_field :picture, accept: 'image/jpeg,image/png' %>
  
  <%= f.submit "投稿", class: "btn" %>
<% end %>

<script type="text/javascript">
  $('#post_picture').bind('change', function() {
    var size_in_megabytes = this.files[0].size/1024/1024;
    if (size_in_megabytes > 5) {
      alert('画像のサイズが5MBを超えています。画像のサイズを5MB以下にしてください。');
    }
  });
</script>