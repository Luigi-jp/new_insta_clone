<% provide(:title, "プロフィールを編集") %>
<div class="main edit">
  <deiv class="container">
    <div class="row">
      <div class="col-md-6 offset-md-3">
        <div class="edit-card">
          <div class="user-icon-md">
            <%= image_tag resource.image.url %>
          </div>

          <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
            <%= render "devise/shared/error_messages", resource: resource %>
            
            <div class="field"> 
              <%= f.label "プロフィール画像を変更" %>
              <%= f.file_field :image, accept: 'image/jpeg,image/png' %>
            </div>
            
            <div class="field">
              <%= f.label "名前" %>
              <%= f.text_field :fullname, autofocus: true, autocomplete: "fullname" %>
            </div>
            
            <div class="field">
              <%= f.label "ユーザーネーム" %>
              <%= f.text_field :username, autofocus: true, autocomplete: "username" %>
            </div>
            
            <div class="field">
              <%= f.label "ウェブサイト" %>
              <%= f.text_field :website, autofocus: true, autocomplete: "website" %>
            </div>
            
            <div class="field">
              <%= f.label "自己紹介" %>
              <%= f.text_area :introduction, autofocus: true, autocomplete: "introduction" %>
            </div>
            
            <div class="personal-info">
              <h4>個人の情報</h4>
              <div>
                <p>これは公開プロフィールでは表示されません。</p>
              </div>
            </div>
          
            <div class="field">
              <%= f.label :email %>
              <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
            </div>
            
            <div class="field">
              <%= f.label :phone %>
              <%= f.text_field :phone, autofocus: true, autocomplete: "phone" %>
            </div>
            
            <div class="field">
              <%= f.label :sex %>
              <%= f.text_field :sex, autofocus: true, autocomplete: "sex" %>
            </div>
          
            <div class="actions">
              <%= f.submit "送信する", class: "btn btn-primary" %>
            </div>
          <% end %>
          
          <%= link_to "パスワードを変更", change_path %>
          
          <%= button_to "アカウントを削除", registration_path(resource_name), data: { confirm: "本当によろしいですか" }, method: :delete %>
          
          <%= link_to "Back", :back %>
        </deiv>
      </div>
    </div>
  </deiv>
</div>


