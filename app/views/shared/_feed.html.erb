<div class="article">
  <% @feed_items.each do |feed_item| %>
    <div class="item">
      <div class="feed-header user-icon-mini">
        <%= image_tag feed_item.user.image.url %>
        <%= link_to feed_item.user.username, feed_item.user %>
      </div>
      <div class="article-img">
        <%= image_tag feed_item.picture.url %>
      </div>
      <div class="etc">
        <div class="icon-nav">
          <div class="favorite">
            <%= render 'shared/favorite_form', { feed_item: feed_item } %>
          </div>
          <div class="post-delete">
            <% if current_user == feed_item.user %>
              <%= link_to icon("far", "trash-alt"), feed_item, method: :delete,
                                  data: { confirm: "投稿を削除しますか" } %>
            <% end %>
          </div>
        </div>
        <div class="comments">
          <div class="comment-item">
            <% feed_item.comments.each do |comment| %>
            <div class="comment">
              <p><%= link_to comment.user.username, comment.user %></p>
              <p class="content"><%= comment.content %></p>
              <p class="delete">
                <% if current_user == comment.user %>
                  <%= link_to icon("far", "trash-alt"), comment, method: :delete, 
                                      data: { confirm: "コメントを削除しますか" } %>
                <% end %>
              </p>
            </div>
              
            <% end %>
          </div>
          <div class="comment_form">
            <%= render 'shared/comment_form', {feed_item: feed_item } %>
          </div>
        </div>
      </div>
    </div>
    
  <% end %>
</div>