<div class="article">
  <% @feed_items.each do |feed_item| %>
    <div class="item">
      <div class="feed-header">
        <%= feed_item.user.username %>
      </div>
      <div class="article-img">
        <%= image_tag feed_item.picture.url %>
      </div>
      <div class="etc">
        <div class="favorite">
          <%= render 'shared/favorite_form', { feed_item: feed_item } %>
        </div>
        <div class="comments">
          <div class="comment-item">
            <% feed_item.comments.each do |comment| %>
            <div class="comment">
              <strong><%= comment.user.username %></strong>
              <p class="content"><%= comment.content %></p>
              <p class="delete">
                <% if current_user == comment.user %>
                  <%= link_to "削除", comment, method: :delete, 
                                      data: { confirm: "削除しますか" } %>
                <% end %>
              </p>
            </div>
              
            <% end %>
          </div>
          <div class="comment_form">
            <%= form_for(@comment) do |f| %>
              <%= f.hidden_field :post_id, value: feed_item.id %>
              <div class="content-form">
                <%= f.text_field :content, placeholder: "コメントを追加..." %>
              </div>
              <div class="submit-btn">
                <%= f.submit "投稿する", class: "btn" %>
              </div>
            <% end %>
          </div>
        </div>
      </div>
    </div>
    
  <% end %>
</div>